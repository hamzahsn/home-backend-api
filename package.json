{
    "name": "home-backend-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "clean": "rimraf dist",
        "start": "npm-run-all clean --parallel watch:build watch:server --print-label",
        "watch:build": "tsc --watch",
        "watch:server": "nodemon './dist/index.js' --watch './dist'",
        "build": "tsc -b",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "npm run lint -- --fix"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/hamzahsn/home-backend-api.git"
    },
    "keywords": [
        "Home",
        "typescript",
        "Node",
        "webpack"
    ],
    "author": {
        "name": "Hamza Amdouni",
        "email": "amdouni.hamza.hsn@gmail.com",
        "url": "https://iamhamza.io"
    },
    "license": "ISC",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged "
        }
    },
    "lint-staged": {
        "src/**/*.tsx": [
            "eslint . --fix",
            "git add"
        ]
    },
    "bugs": {
        "url": "https://github.com/hamzahsn/home-backend-api/issues"
    },
    "homepage": "https://github.com/hamzahsn/home-backend-api#readme",
    "dependencies": {
        "fastify": "^3.7.0",
        "fastify-blipp": "^3.0.0",
        "fastify-cors": "^4.1.0",
        "fastify-plugin": "^3.0.0"
    },
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.6",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "cross-env": "^7.0.2",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.8",
        "jest": "^26.6.2",
        "lint-staged": "^10.5.3",
        "nodemon": "^2.0.6",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.3",
        "ts-node": "^9.1.1",
        "typescript": "^4.0.5",
        "winston": "^3.3.3"
    }
}
